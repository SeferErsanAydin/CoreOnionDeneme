@model CategoryVM
@{
    ViewData["Title"] = "AddCategory";
}

<div class="card card-header">
    <div class="card card-body">
        <form asp-action="AddCategory" method="post">
            <div>
                <input asp-for="Category.CategoryName" type="text" placeholder="Enter a category name"/>
            </div>
            <br />
            <br />
            <div>
                <input type="text" asp-for="Category.Description" placeholder="Enter description"/>
            </div>
            <br />
            <br />
            <button class="btn btn-primary">Add</button>
        </form>
    </div>
</div>

